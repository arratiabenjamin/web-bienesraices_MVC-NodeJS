extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-5.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2(class="text-gray-900 text-center text-2xl font-extrabold")= pagina

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow.rounded-sm
                form.space-y-5
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="text" name="email")
                        
                    .flex.items-center.justify-between
                        a(class="text-gray-600 text-xs" href="/auth/login") ¿Ya tienes cuenta? Inicia Sesion
                        a(class="text-gray-600 text-xs" href="/auth/registro") ¿No tienes cuenta? Crea una cuenta

                    
                    input(type="submit" value="Enviar Email" class=" w-full bg-indigo-600 text-white font-bold hover:bg-indigo-700 py-3 rounded-sm cursor-pointed")
