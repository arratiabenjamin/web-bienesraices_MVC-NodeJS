extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2(class="text-gray-900 text-center text-2xl font-extrabold")= pagina

        if errores 
            .max-w-md.mx-auto.my-10 
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow.rounded-sm
                form.space-y-5(method="POST" action="/auth/registro")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="nombre") Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value= usuario? usuario.nombre : '')
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="apellido") Apellido
                        input#apellido.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Tu Apellido" type="text" name="apellido" value= usuario? usuario.apellido : '')
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="text" name="email" value= usuario? usuario.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="repetir_password") Repetir Password
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Repite Tu Password" type="password" name="repetir_password")
                    
                    .flex.items-center.justify-between
                        a(class="text-gray-600 text-xs" href="/auth/login") Â¿Ya tienes cuenta? Inicia Sesion
                        a(class="text-gray-600 text-xs" href="/auth/reset-password") Olvide mi Password

                    input(type="submit" value="Crear Cuenta" class=" w-full bg-indigo-600 hover:bg-indigo-700 py-3 rounded-sm cursor-pointed")
