extends ../layout/index

lock contenido
    .py-10
        h1.text-4xl.my-5.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2(class="text-gray-900 text-center text-2xl font-extrabold")= pagina

        if errores 
            .max-w-md.mx-auto.my-10 
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow.rounded-sm
                form.space-y-5(method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="password") Nuevo Password
                        input#email.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Tu Nuevo Password" type="password" name="password")
                    
                    input(type="submit" value="Reestablecer Password" class=" w-full bg-indigo-600 text-white font-bold hover:bg-indigo-700 py-3 rounded-sm cursor-pointed")
